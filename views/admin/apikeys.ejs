<%- include('../components/template') %>
<main id="content">
  <div class="bg-transparent">
    <div class="sm:flex sm:items-center px-8 pt-4">
      <div class="sm:flex-auto">
        <h1 class="text-base font-medium leading-6 text-white"><%= req.translations.APIKeys %></h1>
        <p class="mt-1 tracking-tight text-sm text-neutral-500">
          <%= req.translations.APIKeysText %>
        </p>
      </div>
      <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <button
          id="createButton"
          type="button"
          class="block rounded-xl <%= theme['button-color'] %> px-3 py-2 text-center text-sm font-medium shadow-lg transition focus:outline focus:outline-2 focus:outline-offset-2"
        >
          <%= req.translations.createNewAPIKey %>
        </button>
      </div>
    </div>

    <% if (req.query.err == "CREATED") { %>
    <div class="mt-6 w-full">
      <div class="rounded-xl bg-emerald-800/10 px-4 py-6 mt-8 ml-8 mb-8 mr-8">
        <div class="flex">
          <div class="flex-shrink-0 ml-1.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mt-2 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-5">
            <h3 class="text-sm font-medium text-emerald-400"><%= req.translations.created %></h3>
            <div class="text-sm text-emerald-400/50">
              <p><%= req.translations.apiKeySuccessCreated %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>

    <div id="nodeTable" class="mt-6 px-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% apiKeys.forEach(function(key) { %>
        <div class="bg-neutral-900/40 border border-white/10 rounded-xl p-4 shadow hover:shadow-lg transition">
          <div class="text-sm text-white mb-2 font-semibold"><%= req.translations.id %>: <span class="font-normal"><%= key.id %></span></div>
          <div class="text-sm text-neutral-400 mb-2"><%= req.translations.key %>:
            <div class="mt-1 rounded-xl font-mono bg-neutral-800/40 px-2 py-1 text-xs font-medium text-neutral-300 ring-1 ring-inset ring-white/10">
              <%= key.key %>
            </div>
          </div>
          <div class="text-sm text-neutral-400 mb-4"><%= req.translations.createdAt %>: 
            <span class="block mt-1 bg-neutral-800/40 px-2 py-1 text-xs rounded-xl font-medium text-neutral-300 ring-1 ring-inset ring-white/10">
              <%= key.createdAt %>
            </span>
          </div>
          <button
            type="button"
            class="removeButton mt-2 w-full rounded-xl bg-red-600 px-3 py-2 text-sm font-medium text-white shadow hover:bg-red-500 transition focus:outline-none"
            data-keyid="<%= key.id %>"
          >
            <%= req.translations.remove %>
          </button>
        </div>
      <% }); %>
    </div>

    <div id="nodeForm" class="mt-6 px-8 w-full hidden">
      <form>
        <button
          id="createNodeBtn"
          type="button"
          class="block rounded-xl <%= theme['button-color'] %> px-3 py-2 text-center text-sm font-medium shadow-lg transition focus:outline focus:outline-2 focus:outline-offset-2"
        >
          <%= req.translations.clickToConfirmCreation %>
        </button>
      </form>
    </div>
  </div>
</main>

<script>
  document.getElementById("createButton").addEventListener("click", function () {
    var table = document.getElementById("nodeTable");
    var form = document.getElementById("nodeForm");
    if (table.style.display !== "none") {
      table.style.display = "none";
      form.style.display = "block";
    } else {
      table.style.display = "block";
      form.style.display = "none";
    }
  });
</script>

<script>
  document.getElementById("createNodeBtn").addEventListener("click", function () {
    fetch("/apikeys/create", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      }
    })
      .then((response) => {
        if (response.ok) {
          return response.json();
        }
        throw new Error("Failed to create API Key");
      })
      .then((data) => {
        console.log("key created:", data);
        alert('<%= req.translations.apiKeySuccessCreated %>');
        window.location.reload();
      })
      .catch(error => alert('<%= req.translations.apiKeyErrorCreated %>: ' + error.message));
  });
</script>

<!-- Remove -->
<script>
  document.querySelectorAll('.removeButton').forEach(button => {
    button.addEventListener('click', function () {
      const keyId = this.dataset.keyid;

      fetch('/apikeys/delete', {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ keyId })
      })
        .then(response => {
          if (response.ok) {
            console.log('API KEY DELETED');
            window.location.href = '../admin/apikeys?err=CREATED'
          } else {
            throw new Error('Failed to delete key');
          }
        })
        .catch(error => alert('<%= req.translations.apiKeyErrorDelete %>: ' + error.message));
    });
  });
</script>

<%- include('../components/footer') %>
