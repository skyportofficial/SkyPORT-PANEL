<%- include('../components/template') %>
<main id="content">
  <div class="bg-transparent flex flex-col items-center justify-center min-h-screen px-4 py-10">
    <div class="w-full max-w-md">
      <h1 class="text-base font-medium leading-6 text-white"><%= req.translations.editUser %></h1>
      <p class="mt-1 tracking-tight text-sm text-neutral-500"><%= req.translations.editUserDetails %></p>

      <form id="editUserForm" action="/admin/users/edit/<%= editUser.userId %>" method="POST" class="mt-6 space-y-4">
        <div>
          <label class="text-neutral-400 text-sm tracking-tight mb-1 block"><%= req.translations.username %>:</label>
          <input
            id="userName"
            type="text"
            name="username"
            class="w-full rounded-xl focus:ring-transparent focus:border-transparent text-white text-sm px-4 py-2 bg-neutral-600/20 placeholder:text-white/20 border border-black/10"
            value="<%= editUser.username %>"
            placeholder="<%= req.translations.usernamePlaceholder %>"
          />
        </div>

        <div>
          <label class="text-neutral-400 text-sm tracking-tight mb-1 block"><%= req.translations.email %>:</label>
          <input
            id="email"
            type="email"
            name="email"
            class="w-full rounded-xl focus:ring-transparent focus:border-transparent text-white text-sm px-4 py-2 bg-neutral-600/20 placeholder:text-white/20 border border-black/10"
            value="<%= editUser.email %>"
            placeholder="<%= req.translations.emailPlaceholder %>"
          />
        </div>

        <div>
          <label class="text-neutral-400 text-sm tracking-tight mb-1 block"><%= req.translations.passwordLabel %>:</label>
          <input
            id="userPass"
            type="password"
            name="password"
            class="w-full rounded-xl focus:ring-transparent focus:border-transparent text-white text-sm px-4 py-2 bg-neutral-600/20 placeholder:text-white/20 border border-black/10"
            placeholder="******"
          />
        </div>

        <div>
          <label class="text-neutral-400 text-sm tracking-tight mb-1 block"><%= req.translations.admin %>:</label>
          <select
            id="userAdmin"
            name="admin"
            class="w-full rounded-xl focus:ring-transparent focus:border-transparent text-white text-sm px-4 py-2 bg-neutral-600/20 border border-black/10"
          >
            <option value="true" <%= editUser.admin ? 'selected' : '' %>><%= req.translations.true %></option>
            <option value="false" <%= !editUser.admin ? 'selected' : '' %>><%= req.translations.false %></option>
          </select>
        </div>

        <div>
          <label class="text-neutral-400 text-sm tracking-tight mb-1 block"><%= req.translations.verifiedStatus %>:</label>
          <select
            id="userVerified"
            name="verified"
            class="w-full rounded-xl focus:ring-transparent focus:border-transparent text-white text-sm px-4 py-2 bg-neutral-600/20 border border-black/10"
          >
            <option value="true" <%= editUser.verified ? 'selected' : '' %>><%= req.translations.true %></option>
            <option value="false" <%= !editUser.verified ? 'selected' : '' %>><%= req.translations.false %></option>
          </select>
        </div>

        <div class="pt-2">
          <button
            id="saveChangesBtn"
            type="submit"
            class="w-full rounded-xl <%= theme['button-color'] %> px-3 py-2 text-center text-sm font-medium shadow-lg transition focus:outline focus:outline-2 focus:outline-offset-2"
          >
            <%= req.translations.saveChanges %>
          </button>
        </div>
      </form>
    </div>
  </div>
</main>
<%- include('../components/footer') %>
